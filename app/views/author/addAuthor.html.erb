
<div class="container">
<h1 >Thêm tác giả</h1>
    <%= form_for:author,url: xulyadd_path do |f| %>
  <div class="row">
    <div class="col-sm-6">
    <div class="form-floating mb-3">
    <label for="floatingInput">Name</label>
              <%= f.text_field :name, class: "form-control", placeholder: "Nhập tên" %>
  
</div>
    </div>
    <div class="col-sm-6"></div>
       <div class="col-sm-6">
   <div class="form-floating">
   <label for="floatingInput">Ages</label>
              <%= f.text_field :age, class: "form-control", placeholder: "Nhập tuổi" %>
  

</div>
    </div>
     <div class="col-sm-6"></div>
   <div class="col-sm-6">
   <div class="form-floating">
   <label for="floatingInput">Phone Number</label>
              <%= f.text_field :phone, class: "form-control", placeholder: "Nhập số điện thoại" %>
   
  
</div>
    </div>
    <div class="col-sm-6"></div>
      <div class="col-sm-6">
                <%= f.submit "Add", class: "btn btn-success" %>
   
      </div>
  </div>
      <% end %>
</div>




